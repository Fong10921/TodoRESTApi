@page "/Account/Role"
@model RoleModel

@{
    ViewData["Title"] = "Permissions Management";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
            <tr>
                <th>Page</th>
                <th>Create</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Export</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.PagePermissionViewModels.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => Model.PagePermissionViewModels.ElementAt(i).RoleName)
                        @Html.HiddenFor(m => Model.PagePermissionViewModels.ElementAt(i).RoleName)
                    </td>
                    <td class="text-center">
                        @Html.CheckBoxFor(m => Model.PagePermissionViewModels.ElementAt(i).CanCreate)
                    </td>
                    <td class="text-center">
                        @Html.CheckBoxFor(m => Model.PagePermissionViewModels.ElementAt(i).CanView)
                    </td>
                    <td class="text-center">
                        @Html.CheckBoxFor(m => Model.PagePermissionViewModels.ElementAt(i).CanEdit)
                    </td>
                    <td class="text-center">
                        @Html.CheckBoxFor(m => Model.PagePermissionViewModels.ElementAt(i).CanDelete)
                    </td>
                    <td class="text-center">
                        @Html.CheckBoxFor(m => Model.PagePermissionViewModels.ElementAt(i).CanExport)
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>